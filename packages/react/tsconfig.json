{
  "extends": "@signal-web-ui/tsconfig/library",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2019",
    "moduleResolution": "Bundler",
    "types": ["react", "react-dom"],
    "paths": {
      "@signal-web-ui/core/dist/custom-elements/*": ["../core/dist/custom-elements/*"]
    }
  },
  "include": ["src"]
}
